<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Top productos - Donde Indio</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="p-4">
    <div class="container">
    <!-- NAVBAR -->
      <%- include('partials/navbar') %>

      <a href="/mesas" class="btn btn-secondary mb-3">⬅ Volver</a>

      <h1 class="mb-4">Top productos más vendidos</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Cantidad vendida</th>
            <th>Total generado</th>
          </tr>
        </thead>
        <tbody>
          <% lista.forEach(p => { %>
            <tr>
              <td><%= p.nombre %></td>
              <td><%= p.cantidad %></td>
              <td>₡<%= p.total.toLocaleString("es-CR") %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
  </body>
</html>
