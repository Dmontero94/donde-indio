<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Top productos - Donde Indio</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="p-4">
    <div class="container">
    <!-- NAVBAR -->
      <%- include('partials/navbar') %>

      <div class="mb-3">
        <a href="/mesas" class="btn btn-secondary btn-sm">⬅ Volver a mesas</a>
      </div>

      <h1 class="mb-4">Top productos más vendidos</h1>

      <!-- FILTRO POR RANGO DE FECHAS -->
      <form method="GET" action="/reportes/top-productos" class="row mb-4 g-2">
        <div class="col-md-4">
          <label class="form-label">Desde</label>
          <input
            type="date"
            name="desde"
            class="form-control"
            value="<%= desde %>"
          />
        </div>

        <div class="col-md-4">
          <label class="form-label">Hasta</label>
          <input
            type="date"
            name="hasta"
            class="form-control"
            value="<%= hasta %>"
          />
        </div>

        <div class="col-md-4 d-flex align-items-end">
          <button class="btn btn-primary w-100">Filtrar</button>
        </div>
      </form>

      <!-- RESUMEN DEL RANGO -->
      <div class="row mb-4">
        <div class="col-md-4 mb-2">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Rango seleccionado</h5>
              <p class="card-text">
                <small class="text-muted">
                  Desde <%= desde %> hasta <%= hasta %>
                </small>
              </p>
            </div>
          </div>
        </div>
      </div>

      <% if (!lista || lista.length === 0) { %>
        <p>No hay productos vendidos en este rango de fechas.</p>
      <% } else { %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Producto</th>
              <th>Cantidad vendida</th>
              <th>Total generado</th>
            </tr>
          </thead>
          <tbody>
            <% lista.forEach(p => { %>
              <tr>
                <td><%= p.nombre %></td>
                <td><%= p.cantidad %></td>
                <td>₡<%= p.total.toLocaleString("es-CR") %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>

    </div>
  </body>
</html>
