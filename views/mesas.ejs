<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Mesas - Donde Indio</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-light">
    <div class="container py-4">

      <!-- NAVBAR -->
      <%- include('partials/navbar') %>

      <!-- CONTENIDO PRINCIPAL -->
      <h1 class="mb-4">Mesas</h1>

      <div class="row row-cols-2 row-cols-md-5 g-3">
        <% mesas.forEach(mesa => { %>
        <div class="col">
          <a href="/mesas/<%= mesa.numero %>" class="text-decoration-none">
            <div
              class="card text-center
              <%= mesa.estado === 'ocupada' ? 'bg-danger text-white' : 'bg-success text-white' %>"
            >
              <div class="card-body">
                <% const isBarra = mesa.numero > 10; %>
                <h5 class="card-title"><%= isBarra ? 'Barra ' + (mesa.numero - 10) : 'Mesa ' + mesa.numero %></h5>
                <p class="card-text">
                  <%= mesa.estado === 'ocupada' ? 'Ocupada' : 'Libre' %>
                </p>
              </div>
            </div>
          </a>
        </div>
        <% }) %>
      </div>

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>